<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGrayToolbar</item>
        <item name="android:textColorPrimary">@color/colorGrayToolbar</item>
        <item name="android:textColorSecondary">@color/colorGrayToolbarActionText</item>
        <item name="colorPrimaryDark">@color/colorGrayToolbar</item>
        <item name="colorAccent">@color/colorGrayToolbarActionText</item>
    </style>

    <style name="AppTheme.OMGEditText">
        <item name="colorControlNormal">@color/colorGrayToolbarActionText</item>
        <item name="colorControlActivated">@color/colorBlue</item>
        <item name="colorControlHighlight">@color/colorBlue</item>
    </style>

    <style name="OMGHintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorBlue</item>
    </style>

    <style name="AppTheme.OMGButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/selector_blue_button</item>
        <item name="android:textColor">@color/colorWhiteNumPad</item>
    </style>

    <style name="OMGBoldText">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="OMGNumPad">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/colorGrayText</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="OMGNumPad.Gray">
        <item name="android:background">@drawable/numpad_background_gray</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
</resources>
